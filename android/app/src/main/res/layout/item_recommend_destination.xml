<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="destination"
            type="com.example.airbnb.domain.model.RecommendDestination" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recommend_destination"
            android:layout_width="242dp"
            android:layout_height="294dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey3"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_recommend_destination_title"
            style="@style/Subtitle1.Grey1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@{destination.name}"
            app:layout_constraintTop_toBottomOf= "@id/cv_recommend_destination"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>